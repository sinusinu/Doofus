    <Compile Remove="DoofusPluginBase\**" />
    <EmbeddedResource Remove="DoofusPluginBase\**" />
    <None Remove="DoofusPluginBase\**" />
  </ItemGroup>

  <ItemGroup>
    <None Update="config.json">
