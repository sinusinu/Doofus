    <AssemblyName>doofus</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenAI" Version="2.0.0-beta.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="DoofusPluginBase\DoofusPluginBase.csproj" />
